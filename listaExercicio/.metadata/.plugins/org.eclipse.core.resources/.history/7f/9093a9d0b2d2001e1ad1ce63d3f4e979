<?php

abstract class Animal {
    
    public function falar(){
        
        return "som";
        
    }
    
    public function mover(){
        
        return "anda";
        
    }
    
}

class Cachorro extends Animal {
    
    public function falar(){
        
        return "late";
        
    }
    
    
}

class Gato extends Animal {
    
    public function falar(){
        
        return "Mia";
        
    }
    
}

$pluto = new Cachorro();

echo $pluto->falar() . "<br/>";
echo $pluto->mover() . "<br/>";

echo "------------------------<br>";

$garfield = new Gato();

echo $garfield->falar() . "<br/>";
echo $garfield->mover() . "<br/>";

?>

